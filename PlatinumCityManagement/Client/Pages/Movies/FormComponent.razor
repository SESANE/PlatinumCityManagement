@using PlatinumCityManagement.Client.Components
<EditForm Model="@movie" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Title: </label>
            <div>
                <InputText @bind-Value="@movie.Title" class="form-control" />
                <ValidationMessage For="@(() => movie.Title)" />
            </div>
        </div>

        <div class="form-group">
            <label>Rating: </label>
            <div>
                <InputText @bind-Value="@movie.Rating" class="form-control" />
                <ValidationMessage For="@(() => movie.Rating)" />
            </div>
        </div>

        <div class="form-group">
            <label>Duration: </label>
            <div>
                <InputText @bind-Value="@movie.Duration" class="form-control" />
                <ValidationMessage For="@(() => movie.Duration)" />
            </div>
        </div>

        <div class="form-group">
            <label>Description: </label>
            <div>
                <InputText @bind-Value="@movie.MovieDescription" class="form-control" />
                <ValidationMessage For="@(() => movie.MovieDescription)" />
            </div>
        </div>


        <div class="form-group">
            <label>Cast: </label>
            <div>
                <InputText @bind-Value="@movie.Cast" class="form-control" />
                <ValidationMessage For="@(() => movie.Cast)" />
            </div>
        </div>

        <div class="form-group">
            <label>Review: </label>
            <div>
                <InputText @bind-Value="@movie.Review" class="form-control" />
                <ValidationMessage For="@(() => movie.Review)" />
            </div>
        </div>

        <div class="form-group">
            <label>Poster: </label>
            <div>
                <InputText @bind-Value="@movie.Poster" class="form-control" />
                <ValidationMessage For="@(() => movie.Poster)" />
            </div>
        </div>

        <br />
        <br />
    </fieldset>

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="movies" />

</EditForm>


@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Movie? movie { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
    
}